<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 服务提供方应用名 -->
    <dubbo:application name="dubbo-provider"/>

    <!-- 服务注册中心的地址, 使用 multicast 广播注册中心, 官方 demo 使用的是这种 -->
    <!-- <dubbo:registry address="multicast://224.5.6.7:1234"/> -->

    <!-- 服务注册中心的地址, 使用 zookeeper, 集群的注册中心如何配置 ? -->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" />

    <!-- 服务名和对外暴露的端口号 -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <!-- 声明对外暴露的服务接口, 注意是接口 -->
    <dubbo:service interface="com.lupw.dubbo.UserCenterService" ref="userCenterService"/>

    <!-- 定义实现了服务接口的类的 bean -->
    <bean id="userCenterService" class="com.lupw.dubbo.UserCenterServiceImpl"/>
</beans>